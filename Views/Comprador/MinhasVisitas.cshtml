@model List<VisitaViewModel>

@{
    ViewData["Title"] = "Minhas Visitas";
    var aguardaAprovacao = Model.Where(v => v.Estado == "Pendente").OrderBy(v => v.Data_Hora).ToList();
    var aprovadas = Model.Where(v => v.Estado == "Confirmada").OrderBy(v => v.Data_Hora).ToList();
    var realizadas = Model.Where(v => v.Estado == "Realizada").OrderByDescending(v => v.Data_Hora).ToList();
    var recusadas = Model.Where(v => v.Estado == "Recusada").OrderByDescending(v => v.Data_Hora).ToList();
    var canceladas = Model.Where(v => v.Estado == "Cancelada").OrderByDescending(v => v.Data_Hora).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-event"></i> Minhas Visitas</h2>
        <a asp-action="Search" class="btn btn-primary">
            <i class="bi bi-search"></i> Procurar Veículos
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Tabs para filtrar por estado -->
        <ul class="nav nav-tabs mb-4" id="visitasTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="aguarda-tab" data-bs-toggle="tab" data-bs-target="#aguarda" type="button" role="tab">
                    <i class="bi bi-hourglass-split text-warning"></i> Aguarda Aprovação
                    @if (aguardaAprovacao.Any())
                    {
                        <span class="badge bg-warning text-dark">@aguardaAprovacao.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="aprovadas-tab" data-bs-toggle="tab" data-bs-target="#aprovadas" type="button" role="tab">
                    <i class="bi bi-check-circle text-success"></i> Aprovadas
                    @if (aprovadas.Any())
                    {
                        <span class="badge bg-success">@aprovadas.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="realizadas-tab" data-bs-toggle="tab" data-bs-target="#realizadas" type="button" role="tab">
                    Realizadas (@realizadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="recusadas-tab" data-bs-toggle="tab" data-bs-target="#recusadas" type="button" role="tab">
                    Recusadas (@recusadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="canceladas-tab" data-bs-toggle="tab" data-bs-target="#canceladas" type="button" role="tab">
                    Canceladas (@canceladas.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content" id="visitasTabContent">
            <!-- Tab Aguarda Aprovação -->
            <div class="tab-pane fade show active" id="aguarda" role="tabpanel">
                @if (aguardaAprovacao.Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-hourglass-split"></i>
                        <strong>A aguardar:</strong> Estas visitas estão à espera de aprovação do vendedor.
                    </div>
                    <div class="row">
                        @foreach (var visita in aguardaAprovacao)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-warning">
                                    @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                    {
                                        <img src="@visita.FotoPrincipal" class="card-img-top" alt="@visita.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-car-front" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@visita.Titulo</h5>
                                        <p class="text-muted mb-2">@visita.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@visita.Preco.ToString("N0") €</h6>

                                        <p class="mb-2"><i class="bi bi-calendar-event text-warning"></i> @visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</p>
                                        <p class="mb-2"><i class="bi bi-geo-alt text-danger"></i> @visita.Localizacao</p>

                                        @if (!string.IsNullOrEmpty(visita.Observacoes))
                                        {
                                            <p class="mb-2 text-muted"><small><i class="bi bi-chat-left-text"></i> @visita.Observacoes</small></p>
                                        }

                                        <span class="badge bg-warning text-dark mb-3"><i class="bi bi-hourglass-split"></i> Aguarda Aprovação</span>

                                        <div class="d-grid gap-2">
                                            <a asp-action="AnuncioDetails" asp-route-id="@visita.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                            <form asp-action="CancelarVisita" asp-route-id="@visita.ID_Visita" method="post" onsubmit="return confirm('Tem a certeza que pretende cancelar este pedido de visita?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle"></i> Cancelar Pedido
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de visita a aguardar aprovação.
                    </div>
                }
            </div>

            <!-- Tab Aprovadas -->
            <div class="tab-pane fade" id="aprovadas" role="tabpanel">
                @if (aprovadas.Any())
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle"></i>
                        <strong>Aprovadas:</strong> Estas visitas foram aprovadas pelo vendedor. Compareça na data e local indicados!
                    </div>
                    <div class="row">
                        @foreach (var visita in aprovadas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-success">
                                    @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                    {
                                        <img src="@visita.FotoPrincipal" class="card-img-top" alt="@visita.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-car-front" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@visita.Titulo</h5>
                                        <p class="text-muted mb-2">@visita.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@visita.Preco.ToString("N0") €</h6>

                                        <p class="mb-2"><i class="bi bi-calendar-event text-success"></i> <strong>@visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</strong></p>
                                        <p class="mb-2"><i class="bi bi-geo-alt text-danger"></i> <strong>@visita.Localizacao</strong></p>

                                        @if (!string.IsNullOrEmpty(visita.Observacoes))
                                        {
                                            <p class="mb-2 text-muted"><small><i class="bi bi-chat-left-text"></i> @visita.Observacoes</small></p>
                                        }

                                        <span class="badge bg-success mb-3"><i class="bi bi-check-circle"></i> Aprovada</span>

                                        <div class="d-grid gap-2">
                                            <a asp-action="AnuncioDetails" asp-route-id="@visita.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                            <form asp-action="CancelarVisita" asp-route-id="@visita.ID_Visita" method="post" onsubmit="return confirm('Tem a certeza que pretende cancelar esta visita aprovada?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle"></i> Cancelar Visita
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas aprovadas.
                    </div>
                }
            </div>

            <!-- Tab Realizadas -->
            <div class="tab-pane fade" id="realizadas" role="tabpanel">
                <div class="row">
                    @foreach (var visita in realizadas)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                {
                                    <img src="@visita.FotoPrincipal" class="card-img-top" alt="@visita.Titulo" style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@visita.Titulo</h5>
                                    <p class="text-muted mb-2">@visita.MarcaModelo</p>
                                    <p class="mb-2"><i class="bi bi-calendar-event"></i> @visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</p>
                                    <span class="badge bg-success mb-3">Realizada</span>
                                    <div class="d-grid">
                                        <a asp-action="AnuncioDetails" asp-route-id="@visita.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver Anúncio
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!realizadas.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Não tem visitas realizadas.
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Tab Recusadas -->
            <div class="tab-pane fade" id="recusadas" role="tabpanel">
                @if (recusadas.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <i class="bi bi-x-circle"></i>
                        <strong>Recusadas:</strong> Estas visitas foram recusadas pelo vendedor.
                    </div>
                    <div class="row">
                        @foreach (var visita in recusadas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                    {
                                        <img src="@visita.FotoPrincipal" class="card-img-top" alt="@visita.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@visita.Titulo</h5>
                                        <p class="text-muted mb-2">@visita.MarcaModelo</p>
                                        <p class="mb-2"><i class="bi bi-calendar-event"></i> @visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</p>

                                        @if (!string.IsNullOrEmpty(visita.Observacoes))
                                        {
                                            <p class="mb-2 text-muted"><small><i class="bi bi-chat-left-text"></i> @visita.Observacoes</small></p>
                                        }

                                        <span class="badge bg-danger mb-3">Recusada</span>
                                        <div class="d-grid">
                                            <a asp-action="AnuncioDetails" asp-route-id="@visita.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas recusadas.
                    </div>
                }
            </div>

            <!-- Tab Canceladas -->
            <div class="tab-pane fade" id="canceladas" role="tabpanel">
                <div class="row">
                    @foreach (var visita in canceladas)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                {
                                    <img src="@visita.FotoPrincipal" class="card-img-top" alt="@visita.Titulo" style="height: 200px; object-fit: cover;">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@visita.Titulo</h5>
                                    <p class="text-muted mb-2">@visita.MarcaModelo</p>
                                    <p class="mb-2"><i class="bi bi-calendar-event"></i> @visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</p>
                                    <span class="badge bg-secondary mb-3">Cancelada</span>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!canceladas.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> Não tem visitas canceladas.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Sem Visitas</strong>: Ainda não agendou nenhuma visita.
            <a asp-action="Search" class="alert-link">Procure veículos agora!</a>
        </div>
    }
</div>
