@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-cart-check"></i> Finalizar Compra</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ID_Anuncio" />

                        <div class="mb-4">
                            <h5>Método de Pagamento</h5>
                            <div class="form-group">
                                <label asp-for="Metodo_Pagamento" class="form-label"></label>
                                <select asp-for="Metodo_Pagamento" class="form-select" required>
                                    <option value="">Selecione o método...</option>
                                    @foreach (var metodo in Model.MetodosPagamento)
                                    {
                                        <option value="@metodo">@metodo</option>
                                    }
                                </select>
                                <span asp-validation-for="Metodo_Pagamento" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notas" class="form-label"></label>
                            <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Adicione observações sobre a compra (opcional)"></textarea>
                            <span asp-validation-for="Notas" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="termsCheck" required>
                            <label class="form-check-label" for="termsCheck">
                                Aceito os <a href="#" target="_blank">Termos e Condições</a> e confirmo que li a descrição do veículo
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Confirmar Compra - @Model.Preco.ToString("N0") €
                            </button>
                            <a asp-action="AnuncioDetails" asp-route-id="@Model.ID_Anuncio" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar ao Anúncio
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Resumo do Pedido -->
            <div class="card shadow mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Resumo do Pedido</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.FotoPrincipal))
                    {
                        <img src="@Model.FotoPrincipal" alt="@Model.Titulo" class="img-fluid rounded mb-3" />
                    }
                    <h5>@Model.Titulo</h5>
                    <p class="text-muted">@Model.MarcaModelo</p>
                    <p><i class="bi bi-geo-alt"></i> @Model.Localizacao</p>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <h4 class="text-success mb-0">@Model.Preco.ToString("N0") €</h4>
                    </div>
                </div>
            </div>

            <!-- Info de Segurança -->
            <div class="alert alert-info">
                <i class="bi bi-shield-check"></i>
                <strong>Compra Segura</strong>
                <p class="small mb-0 mt-2">Todos os dados são transmitidos de forma segura. O pagamento será processado após a confirmação.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
