@model OrderConfirmationViewModel

@{
    ViewData["Title"] = "Confirmação de Pedido";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <i class="bi bi-check-circle" style="font-size: 3rem;"></i>
                    <h3 class="mt-2">Pedido Confirmado!</h3>
                    <p class="mb-0">Número do Pedido: #@Model.ID_Compra</p>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="bi bi-info-circle"></i>
                        <strong>Obrigado pela sua compra!</strong> O seu pedido foi registado com sucesso.
                    </div>

                    <div class="row mb-4">
                        @if (!string.IsNullOrEmpty(Model.FotoPrincipal))
                        {
                            <div class="col-md-4">
                                <img src="@Model.FotoPrincipal" alt="@Model.Titulo" class="img-fluid rounded" />
                            </div>
                        }
                        <div class="col-md-8">
                            <h4>@Model.Titulo</h4>
                            <p class="text-muted">@Model.MarcaModelo</p>
                            <h5 class="text-primary">@Model.Preco.ToString("C")</h5>
                            <p><small class="text-muted">Data: @Model.Data.ToString("dd/MM/yyyy")</small></p>
                        </div>
                    </div>

                    <hr />

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-credit-card"></i> Informações de Pagamento</h5>
                            <p><strong>Método:</strong> @Model.Metodo_Pagamento</p>
                            <p>
                                <strong>Estado:</strong>
                                @if (Model.Estado_Pagamento == "Pago")
                                {
                                    <span class="badge bg-success">Pago</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pendente</span>
                                }
                            </p>

                            @if (Model.Estado_Pagamento == "Pendente")
                            {
                                <hr />
                                <h6 class="text-danger">Instruções para Pagamento:</h6>

                                @if (Model.Metodo_Pagamento == "Multibanco")
                                {
                                    <div class="alert alert-info">
                                        <p><strong>Entidade:</strong> @Model.EntidadeMB</p>
                                        <p><strong>Referência:</strong> @Model.ReferenciaMB</p>
                                        <p><strong>Valor:</strong> @Model.Preco.ToString("C")</p>
                                        <small>Use estes dados para efetuar o pagamento em qualquer caixa Multibanco ou homebanking.</small>
                                    </div>
                                }
                                else if (Model.Metodo_Pagamento == "MB Way")
                                {
                                    <div class="alert alert-info">
                                        <p><strong>Número de Telemóvel:</strong> @Model.NumeroTelemovelMBWay</p>
                                        <p><strong>Valor:</strong> @Model.Preco.ToString("C")</p>
                                        <small>Receberá uma notificação MB Way para confirmar o pagamento.</small>
                                    </div>
                                }
                                else if (Model.Metodo_Pagamento == "Transferência Bancária")
                                {
                                    <div class="alert alert-info">
                                        <p><strong>IBAN:</strong> @Model.IBAN</p>
                                        <p><strong>Valor:</strong> @Model.Preco.ToString("C")</p>
                                        <p><strong>Descrição:</strong> Pedido #@Model.ID_Compra</p>
                                        <small>Efetue a transferência usando os dados acima.</small>
                                    </div>
                                }

                                <div class="alert alert-warning mt-3">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <strong>Atenção:</strong> Este é um ambiente de demonstração. Use o botão abaixo para simular o pagamento.
                                </div>

                                <form asp-action="SimulatePayment" asp-route-id="@Model.ID_Compra" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="bi bi-lightning"></i> Simular Pagamento
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-success mt-3">
                                    <i class="bi bi-check-circle"></i>
                                    <strong>Pagamento Confirmado!</strong> A sua compra foi concluída com sucesso.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="MinhasCompras" class="btn btn-primary">
                            <i class="bi bi-list"></i> Ver Minhas Compras
                        </a>
                        <a asp-action="Search" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Continuar a Pesquisar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
