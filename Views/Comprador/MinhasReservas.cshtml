@model List<ReservaViewModel>

@{
    ViewData["Title"] = "Minhas Reservas";
    var aguardaAprovacao = Model.Where(r => r.Estado == "Pendente").OrderBy(r => r.Data_Inicio).ToList();
    var aprovadas = Model.Where(r => r.Estado == "Confirmada").OrderBy(r => r.Data_Fim).ToList();
    var concluidas = Model.Where(r => r.Estado == "Concluida").OrderByDescending(r => r.Data_Fim).ToList();
    var recusadas = Model.Where(r => r.Estado == "Recusada").OrderByDescending(r => r.Data_Inicio).ToList();
    var canceladas = Model.Where(r => r.Estado == "Cancelada").OrderByDescending(r => r.Data_Inicio).ToList();
    var expiradas = Model.Where(r => r.Estado == "Expirada").OrderByDescending(r => r.Data_Fim).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> Minhas Reservas</h2>
        <a asp-action="Search" class="btn btn-primary">
            <i class="bi bi-search"></i> Procurar Veículos
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Tabs para filtrar por estado -->
        <ul class="nav nav-tabs mb-4" id="reservasTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="aguarda-tab" data-bs-toggle="tab" data-bs-target="#aguarda" type="button" role="tab">
                    <i class="bi bi-hourglass-split text-warning"></i> Aguarda Aprovação
                    @if (aguardaAprovacao.Any())
                    {
                        <span class="badge bg-warning text-dark">@aguardaAprovacao.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="aprovadas-tab" data-bs-toggle="tab" data-bs-target="#aprovadas" type="button" role="tab">
                    <i class="bi bi-check-circle text-success"></i> Aprovadas
                    @if (aprovadas.Any())
                    {
                        <span class="badge bg-success">@aprovadas.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="concluidas-tab" data-bs-toggle="tab" data-bs-target="#concluidas" type="button" role="tab">
                    Concluídas (@concluidas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="recusadas-tab" data-bs-toggle="tab" data-bs-target="#recusadas" type="button" role="tab">
                    Recusadas (@recusadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="canceladas-tab" data-bs-toggle="tab" data-bs-target="#canceladas" type="button" role="tab">
                    Canceladas (@canceladas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="expiradas-tab" data-bs-toggle="tab" data-bs-target="#expiradas" type="button" role="tab">
                    Expiradas (@expiradas.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content" id="reservasTabContent">
            <!-- Tab Aguarda Aprovação -->
            <div class="tab-pane fade show active" id="aguarda" role="tabpanel">
                @if (aguardaAprovacao.Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-hourglass-split"></i>
                        <strong>A aguardar:</strong> Estes pedidos de reserva estão à espera de aprovação do vendedor.
                    </div>
                    <div class="row">
                        @foreach (var reserva in aguardaAprovacao)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-warning">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-car-front" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@reserva.Preco.ToString("N0") €</h6>

                                        <p class="mb-2"><i class="bi bi-calendar-event text-warning"></i> Pedido em: @reserva.Data_Inicio.ToString("dd/MM/yyyy HH:mm")</p>
                                        <p class="mb-2"><i class="bi bi-geo-alt text-danger"></i> @reserva.Localizacao</p>

                                        <span class="badge bg-warning text-dark mb-3"><i class="bi bi-hourglass-split"></i> Aguarda Aprovação</span>

                                        <div class="d-grid gap-2">
                                            <a asp-action="AnuncioDetails" asp-route-id="@reserva.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                            <form asp-action="CancelarReserva" asp-route-id="@reserva.ID_Historico" method="post" onsubmit="return confirm('Tem a certeza que pretende cancelar este pedido de reserva?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle"></i> Cancelar Pedido
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de reserva a aguardar aprovação.
                    </div>
                }
            </div>

            <!-- Tab Aprovadas -->
            <div class="tab-pane fade" id="aprovadas" role="tabpanel">
                @if (aprovadas.Any())
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle"></i>
                        <strong>Reservas Ativas:</strong> Estes veículos estão reservados para si. Só você pode comprá-los durante o período de reserva!
                    </div>
                    <div class="row">
                        @foreach (var reserva in aprovadas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-success">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-car-front" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@reserva.Preco.ToString("N0") €</h6>

                                        <p class="mb-2"><i class="bi bi-geo-alt text-danger"></i> @reserva.Localizacao</p>

                                        @{
                                            var corBadge = reserva.DiasRestantes > 3 ? "bg-success" : (reserva.DiasRestantes > 1 ? "bg-warning text-dark" : "bg-danger");
                                        }

                                        <div class="mb-3">
                                            <span class="badge @corBadge">
                                                <i class="bi bi-clock"></i> @reserva.DiasRestantes dia(s) restante(s)
                                            </span>
                                        </div>

                                        <small class="text-muted d-block mb-3">
                                            Expira em: @reserva.Data_Fim.ToString("dd/MM/yyyy")
                                        </small>

                                        <span class="badge bg-success mb-3"><i class="bi bi-check-circle"></i> Reservado para Si</span>

                                        <div class="d-grid gap-2">
                                            <a asp-action="Checkout" asp-route-id="@reserva.ID_Anuncio" class="btn btn-sm btn-success">
                                                <i class="bi bi-cart-check"></i> Comprar Agora
                                            </a>
                                            <a asp-action="AnuncioDetails" asp-route-id="@reserva.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Detalhes
                                            </a>
                                            <form asp-action="CancelarReserva" asp-route-id="@reserva.ID_Historico" method="post" onsubmit="return confirm('Tem a certeza que pretende cancelar esta reserva? O veículo ficará disponível para outros compradores.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle"></i> Cancelar Reserva
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas ativas.
                    </div>
                }
            </div>

            <!-- Tab Concluídas -->
            <div class="tab-pane fade" id="concluidas" role="tabpanel">
                @if (concluidas.Any())
                {
                    <div class="row">
                        @foreach (var reserva in concluidas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@reserva.Preco.ToString("N0") €</h6>
                                        <span class="badge bg-success mb-3"><i class="bi bi-check-circle"></i> Compra Concluída</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas concluídas.
                    </div>
                }
            </div>

            <!-- Tab Recusadas -->
            <div class="tab-pane fade" id="recusadas" role="tabpanel">
                @if (recusadas.Any())
                {
                    <div class="alert alert-danger mb-3">
                        <i class="bi bi-x-circle"></i>
                        <strong>Recusadas:</strong> Estes pedidos de reserva foram recusados pelo vendedor.
                    </div>
                    <div class="row">
                        @foreach (var reserva in recusadas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-danger">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <h6 class="text-primary mb-3">@reserva.Preco.ToString("N0") €</h6>
                                        <p class="mb-2"><i class="bi bi-calendar-event"></i> Pedido em: @reserva.Data_Inicio.ToString("dd/MM/yyyy HH:mm")</p>

                                        @if (!string.IsNullOrEmpty(reserva.MotivoRecusa))
                                        {
                                            <div class="alert alert-danger py-2 mb-2">
                                                <small><strong>Motivo:</strong> @reserva.MotivoRecusa</small>
                                            </div>
                                        }

                                        <span class="badge bg-danger mb-3"><i class="bi bi-x-circle"></i> Recusada</span>
                                        <div class="d-grid">
                                            <a asp-action="AnuncioDetails" asp-route-id="@reserva.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de reserva recusados.
                    </div>
                }
            </div>

            <!-- Tab Canceladas -->
            <div class="tab-pane fade" id="canceladas" role="tabpanel">
                @if (canceladas.Any())
                {
                    <div class="row">
                        @foreach (var reserva in canceladas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <p class="mb-2"><i class="bi bi-calendar-event"></i> @reserva.Data_Inicio.ToString("dd/MM/yyyy")</p>
                                        <span class="badge bg-secondary mb-3">Cancelada</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas canceladas.
                    </div>
                }
            </div>

            <!-- Tab Expiradas -->
            <div class="tab-pane fade" id="expiradas" role="tabpanel">
                @if (expiradas.Any())
                {
                    <div class="row">
                        @foreach (var reserva in expiradas)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                    {
                                        <img src="@reserva.FotoPrincipal" class="card-img-top" alt="@reserva.Titulo" style="height: 200px; object-fit: cover;">
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@reserva.Titulo</h5>
                                        <p class="text-muted mb-2">@reserva.MarcaModelo</p>
                                        <p class="mb-2"><i class="bi bi-calendar-x"></i> Expirou em: @reserva.Data_Fim.ToString("dd/MM/yyyy")</p>
                                        <span class="badge bg-secondary mb-3">Expirada</span>
                                        <div class="d-grid">
                                            <a asp-action="AnuncioDetails" asp-route-id="@reserva.ID_Anuncio" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver Anúncio
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas expiradas.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Sem Reservas</strong>: Ainda não tem veículos reservados.
            <a asp-action="Search" class="alert-link">Procure agora!</a>
        </div>
    }
</div>
