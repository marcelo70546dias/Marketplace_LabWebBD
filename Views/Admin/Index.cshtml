@model AdminStatisticsViewModel

@{
    ViewData["Title"] = "Painel Administração";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="bg-danger text-white p-4 mb-4 rounded shadow-sm">
                <h1 class="fw-bold"><i class="bi bi-shield-lock-fill"></i> Painel de Administração</h1>
                <p class="fs-5 mb-0">Estatísticas e gestão do sistema</p>
            </div>
        </div>
    </div>

    <!-- Row 1: Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill" style="font-size: 2.5rem;"></i>
                    <h2 class="fw-bold mt-2 mb-0">@Model.TotalCompradores</h2>
                    <p class="mb-0">Compradores</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-shop-window" style="font-size: 2.5rem;"></i>
                    <h2 class="fw-bold mt-2 mb-0">@Model.TotalVendedores</h2>
                    <p class="mb-0">Vendedores</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 bg-warning text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-megaphone-fill" style="font-size: 2.5rem;"></i>
                    <h2 class="fw-bold mt-2 mb-0">@Model.TotalAnunciosAtivos</h2>
                    <p class="mb-0">Anúncios Ativos</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 bg-info text-white">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check-fill" style="font-size: 2.5rem;"></i>
                    <h2 class="fw-bold mt-2 mb-0">@Model.TotalAnunciosVendidos</h2>
                    <p class="mb-0">Vendas Totais</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Charts and Metrics -->
    <div class="row mb-4">
        <div class="col-md-8 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Vendas por Mês (Últimos 12 Meses)</h5>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Métricas Financeiras</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <small class="text-muted">Valor Total de Vendas</small>
                        <h3 class="fw-bold text-success">€@Model.TotalVendasValor.ToString("N2")</h3>
                    </div>
                    <div class="mb-4">
                        <small class="text-muted">Valor Médio por Venda</small>
                        <h4 class="fw-bold text-primary">€@Model.ValorMedioPorVenda.ToString("N2")</h4>
                    </div>
                    <div class="mb-4">
                        <small class="text-muted">Novas Contas Este Mês</small>
                        <h4 class="fw-bold text-info">@Model.NovasContasEsteMes</h4>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted">Vendas Este Mês</small>
                        <h4 class="fw-bold text-warning">@Model.VendasEsteMes</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 3: Top Tables -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-award-fill"></i> Top 10 Marcas</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopMarcas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marca</th>
                                        <th class="text-center">Anúncios</th>
                                        <th class="text-center">Vendas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.TopMarcas.Count; i++)
                                    {
                                        var marca = Model.TopMarcas[i];
                                        <tr>
                                            <td class="fw-bold">@(i + 1)</td>
                                            <td>@marca.NomeMarca</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@marca.NumeroAnuncios</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success">@marca.NumeroVendas</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Sem dados disponíveis</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill"></i> Top 10 Modelos</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopModelos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Modelo</th>
                                        <th class="text-center">Anúncios</th>
                                        <th class="text-center">Vendas</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.TopModelos.Count; i++)
                                    {
                                        var modelo = Model.TopModelos[i];
                                        <tr>
                                            <td class="fw-bold">@(i + 1)</td>
                                            <td>@modelo.NomeMarca @modelo.NomeModelo</td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@modelo.NumeroAnuncios</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success">@modelo.NumeroVendas</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Sem dados disponíveis</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Row 4: Quick Links -->
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-primary" style="font-size: 2.5rem;"></i>
                    <h6 class="card-title mt-3">Utilizadores</h6>
                    <a asp-action="Users" class="btn btn-primary btn-sm">
                        <i class="bi bi-arrow-right-circle"></i> Gerir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shop-window text-success" style="font-size: 2.5rem;"></i>
                    <h6 class="card-title mt-3">Pedidos Vendedor</h6>
                    <a asp-action="PendentesVendedor" class="btn btn-success btn-sm">
                        <i class="bi bi-arrow-right-circle"></i> Ver
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shield-plus text-warning" style="font-size: 2.5rem;"></i>
                    <h6 class="card-title mt-3">Promoções Admin</h6>
                    <a asp-action="PedidosPromocao" class="btn btn-warning btn-sm">
                        <i class="bi bi-arrow-right-circle"></i> Ver
                        @if (ViewBag.NumPedidosPromocao != null && ViewBag.NumPedidosPromocao > 0)
                        {
                            <span class="badge bg-danger ms-1">@ViewBag.NumPedidosPromocao</span>
                        }
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-journal-text text-info" style="font-size: 2.5rem;"></i>
                    <h6 class="card-title mt-3">Logs</h6>
                    <a asp-action="AdminLogs" class="btn btn-info btn-sm">
                        <i class="bi bi-arrow-right-circle"></i> Ver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('salesChart').getContext('2d');
        var salesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.VendasPorMes));

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: salesData.map(d => d.periodo),
                datasets: [{
                    label: 'Número de Vendas',
                    data: salesData.map(d => d.numeroVendas),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    },
                    tooltip: {
                        callbacks: {
                            afterLabel: function(context) {
                                var index = context.dataIndex;
                                var valor = salesData[index].valorTotal;
                                return 'Valor: €' + valor.toFixed(2);
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
}
