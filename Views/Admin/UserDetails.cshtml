@model UserDetailsViewModel

@{
    ViewData["Title"] = "Detalhes do Utilizador";
}

<div class="container-fluid py-4">
    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h2><i class="bi bi-person-circle"></i> @Model.Nome</h2>
                <p class="text-muted mb-0">@Model.Email</p>
            </div>
            <div>
                <a asp-action="Users" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
            </div>
        </div>
    </div>

    <!-- Alertas de Estado -->
    <div class="row mb-3">
        <div class="col-12">
            @if (Model.Bloqueado == true)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-lock-fill"></i>
                    <strong>Conta Bloqueada</strong> - @Model.Motivo_Bloqueio
                    <br>
                    <small>Bloqueado em @Model.Data_Bloqueio?.ToString("dd/MM/yyyy") por @Model.NomeAdminBloqueio</small>
                </div>
            }
            @if (Model.VendorApprovalStatus == "Pending")
            {
                <div class="alert alert-info">
                    <i class="bi bi-clock"></i> Pedido de vendedor pendente de aprovação
                </div>
            }
            @if (Model.Email_Validado != true)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> Email ainda não validado
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Coluna Esquerda - Informações Básicas -->
        <div class="col-lg-6">
            <!-- Informações Pessoais -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-person"></i> Informações Pessoais
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%">ID:</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Nome:</th>
                            <td>@Model.Nome</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>
                                @Model.Email
                                @if (Model.Email_Validado == true)
                                {
                                    <span class="badge bg-success ms-2"><i class="bi bi-check-circle"></i> Validado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark ms-2"><i class="bi bi-exclamation-triangle"></i> Não Validado</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Contacto:</th>
                            <td>@(Model.Contacto ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Morada:</th>
                            <td>@(Model.Morada ?? "-")</td>
                        </tr>
                        <tr>
                            <th>Data de Registo:</th>
                            <td>@Model.Data_Registo.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>@Model.Status</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Roles -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-shield-check"></i> Tipos de Conta
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        <div class="mb-3">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge @GetRoleBadgeClass(role) fs-6 me-2">@role</span>
                            }
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.RolePendente))
                    {
                        <div class="alert alert-warning mb-0">
                            <strong>Role Pendente:</strong> @Model.RolePendente
                        </div>
                    }
                </div>
            </div>

            <!-- Perfil Comprador -->
            @if (Model.CompradorPerfil != null)
            {
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <i class="bi bi-cart"></i> Perfil de Comprador
                    </div>
                    <div class="card-body">
                        <table class="table table-sm mb-3">
                            <tr>
                                <th width="50%">Notificações Email:</th>
                                <td>
                                    @if (Model.CompradorPerfil.Notificacoes_Email == true)
                                    {
                                        <span class="badge bg-success">Ativadas</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Desativadas</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Notificações Push:</th>
                                <td>
                                    @if (Model.CompradorPerfil.Notificacoes_Push == true)
                                    {
                                        <span class="badge bg-success">Ativadas</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Desativadas</span>
                                    }
                                </td>
                            </tr>
                        </table>

                        @if (Model.MarcasFavoritas.Any())
                        {
                            <h6>Marcas Favoritas:</h6>
                            <div>
                                @foreach (var marca in Model.MarcasFavoritas)
                                {
                                    <span class="badge bg-light text-dark border me-1 mb-1">@marca.Nome</span>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0"><em>Sem marcas favoritas definidas</em></p>
                        }
                    </div>
                </div>
            }

            <!-- Perfil Vendedor -->
            @if (Model.VendedorPerfil != null)
            {
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-shop"></i> Perfil de Vendedor
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Tipo:</th>
                                <td>@Model.VendedorPerfil.Tipo</td>
                            </tr>
                            <tr>
                                <th>NIF:</th>
                                <td>@Model.VendedorPerfil.NIF</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.VendedorPerfil.Dados_Faturacao))
                            {
                                <tr>
                                    <th>Dados Faturação:</th>
                                    <td>@Model.VendedorPerfil.Dados_Faturacao</td>
                                </tr>
                            }
                            <tr>
                                <th>Aprovado em:</th>
                                <td>@Model.VendedorPerfil.Data_Aprovacao?.ToString("dd/MM/yyyy") por @Model.NomeAdminAprovacao</td>
                            </tr>
                        </table>
                    </div>
                </div>
            }

            <!-- Aprovação Vendedor -->
            @if (Model.VendorApprovalStatus != null)
            {
                <div class="card mb-3">
                    <div class="card-header bg-warning text-dark">
                        <i class="bi bi-clipboard-check"></i> Estado de Aprovação de Vendedor
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Status:</th>
                                <td>
                                    @if (Model.VendorApprovalStatus == "Pending")
                                    {
                                        <span class="badge bg-info">Pendente</span>
                                    }
                                    else if (Model.VendorApprovalStatus == "Approved")
                                    {
                                        <span class="badge bg-success">Aprovado</span>
                                    }
                                    else if (Model.VendorApprovalStatus == "Rejected")
                                    {
                                        <span class="badge bg-danger">Rejeitado</span>
                                    }
                                </td>
                            </tr>
                            @if (Model.Data_Aprovacao_Vendedor.HasValue)
                            {
                                <tr>
                                    <th>Data Aprovação:</th>
                                    <td>@Model.Data_Aprovacao_Vendedor?.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Aprovado por:</th>
                                    <td>@Model.NomeAdminAprovacao</td>
                                </tr>
                            }
                            @if (!string.IsNullOrEmpty(Model.Motivo_Rejeicao_Vendedor))
                            {
                                <tr>
                                    <th>Motivo Rejeição:</th>
                                    <td>@Model.Motivo_Rejeicao_Vendedor</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            }
        </div>

        <!-- Coluna Direita - Ações e Logs -->
        <div class="col-lg-6">
            <!-- Ações Administrativas -->
            <div class="card mb-3">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-tools"></i> Ações Administrativas
                </div>
                <div class="card-body">
                    @if (Model.Bloqueado == true)
                    {
                        <form method="post" asp-action="UnblockUser" asp-route-id="@Model.Id"
                              onsubmit="return confirm('Tem certeza que deseja desbloquear este utilizador?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-unlock"></i> Desbloquear Utilizador
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#blockUserModal">
                            <i class="bi bi-lock"></i> Bloquear Utilizador
                        </button>
                    }
                </div>
            </div>

            <!-- Logs Administrativos -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-journal-text"></i> Histórico de Ações Administrativas
                </div>
                <div class="card-body">
                    @if (Model.Logs.Any())
                    {
                        <div class="list-group">
                            @foreach (var log in Model.Logs.OrderByDescending(l => l.Data_Hora).Take(10))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <span class="badge @GetLogBadgeClass(log.Tipo_Acao)">
                                                @GetLogActionName(log.Tipo_Acao)
                                            </span>
                                        </h6>
                                        <small>@log.Data_Hora.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">
                                        <small>
                                            <strong>Admin:</strong> @log.ID_AdminNavigation?.ID_UtilizadorNavigation?.Nome<br>
                                            <strong>IP:</strong> @log.IP_Address
                                        </small>
                                    </p>
                                    @if (!string.IsNullOrEmpty(log.Descricao))
                                    {
                                        <small class="text-muted">@log.Descricao</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0"><em>Sem histórico de ações administrativas</em></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Bloqueio -->
<div class="modal fade" id="blockUserModal" tabindex="-1" aria-labelledby="blockUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="BlockUser">
                @Html.AntiForgeryToken()
                <input type="hidden" name="UserId" value="@Model.Id" />
                <input type="hidden" name="UserNome" value="@Model.Nome" />
                <input type="hidden" name="UserEmail" value="@Model.Email" />

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="blockUserModalLabel">
                        <i class="bi bi-lock"></i> Bloquear Utilizador
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Está prestes a bloquear o utilizador <strong>@Model.Nome</strong>.</p>
                    <p class="text-muted">O utilizador será desconectado imediatamente e não poderá aceder à plataforma.</p>

                    <div class="mb-3">
                        <label for="Motivo" class="form-label">Motivo do Bloqueio <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="Motivo" name="Motivo" rows="4" required
                                  placeholder="Descreva o motivo do bloqueio..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-lock"></i> Confirmar Bloqueio
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Administrador" => "bg-danger",
            "Vendedor" => "bg-primary",
            "Comprador" => "bg-success",
            _ => "bg-secondary"
        };
    }

    string GetLogBadgeClass(string action)
    {
        return action switch
        {
            "BLOQUEIO_UTILIZADOR" => "bg-danger",
            "DESBLOQUEIO_UTILIZADOR" => "bg-success",
            "APROVACAO_VENDEDOR" => "bg-primary",
            "REJEICAO_VENDEDOR" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    string GetLogActionName(string action)
    {
        return action switch
        {
            "BLOQUEIO_UTILIZADOR" => "Bloqueio",
            "DESBLOQUEIO_UTILIZADOR" => "Desbloqueio",
            "APROVACAO_VENDEDOR" => "Aprovação Vendedor",
            "REJEICAO_VENDEDOR" => "Rejeição Vendedor",
            _ => action
        };
    }
}
