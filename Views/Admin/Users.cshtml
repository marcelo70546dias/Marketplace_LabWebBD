@model UserListPageViewModel

@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-people"></i> Gestão de Utilizadores</h2>
            <p class="text-muted">Visualize e gira todos os utilizadores da plataforma</p>
        </div>
    </div>

    <!-- Navigation Menu -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="btn-group" role="group" aria-label="Menu de Gestão de Utilizadores">
                <a asp-action="Users" class="btn btn-primary active">
                    <i class="bi bi-people"></i> Utilizadores
                </a>
                <a asp-action="PendentesVendedor" class="btn btn-outline-primary">
                    <i class="bi bi-shop-window"></i> Pedidos Vendedor
                </a>
                <a asp-action="PedidosPromocao" class="btn btn-outline-primary">
                    <i class="bi bi-shield-plus"></i> Pedidos Promoção Admin
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros e Pesquisa -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Users" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Pesquisar</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                           value="@Model.SearchTerm" placeholder="Nome, email ou contacto...">
                </div>
                <div class="col-md-3">
                    <label for="roleFilter" class="form-label">Tipo de Utilizador</label>
                    <select class="form-select" id="roleFilter" name="roleFilter">
                        <option value="">Todos</option>
                        <option value="Comprador" selected="@(Model.RoleFilter == "Comprador")">Comprador</option>
                        <option value="Vendedor" selected="@(Model.RoleFilter == "Vendedor")">Vendedor</option>
                        <option value="Administrador" selected="@(Model.RoleFilter == "Administrador")">Administrador</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="blockedFilter" class="form-label">Estado</label>
                    <select class="form-select" id="blockedFilter" name="blockedFilter">
                        <option value="">Todos</option>
                        <option value="Ativo" selected="@(Model.BlockedFilter == "Ativo")">Ativo</option>
                        <option value="Bloqueado" selected="@(Model.BlockedFilter == "Bloqueado")">Bloqueado</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela de Utilizadores -->
    <div class="card">
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Contacto</th>
                                <th>Tipo</th>
                                <th>Data Registo</th>
                                <th>Estado</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.Nome</strong>
                                        @if (user.Email_Validado != true)
                                        {
                                            <span class="badge bg-warning text-dark ms-1" title="Email não validado">
                                                <i class="bi bi-exclamation-triangle"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@(user.Contacto ?? "-")</td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge @GetRoleBadgeClass(role) me-1">@role</span>
                                        }
                                        @if (user.VendorApprovalStatus == "Pending")
                                        {
                                            <span class="badge bg-info">Vendedor Pendente</span>
                                        }
                                    </td>
                                    <td>@user.Data_Registo.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (user.Bloqueado == true)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock"></i> Bloqueado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Ativo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="UserDetails" asp-route-id="@user.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver Detalhes
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginação -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Navegação de páginas">
                        <ul class="pagination justify-content-center mt-4">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Users"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-roleFilter="@Model.RoleFilter"
                                   asp-route-blockedFilter="@Model.BlockedFilter">
                                    Anterior
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Users"
                                       asp-route-page="@i"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-roleFilter="@Model.RoleFilter"
                                       asp-route-blockedFilter="@Model.BlockedFilter">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Users"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-roleFilter="@Model.RoleFilter"
                                   asp-route-blockedFilter="@Model.BlockedFilter">
                                    Próxima
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Nenhum utilizador encontrado com os filtros selecionados.
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Administrador" => "bg-danger",
            "Vendedor" => "bg-primary",
            "Comprador" => "bg-success",
            _ => "bg-secondary"
        };
    }
}
