<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyOnlineStand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marketplace_LabWebBD.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front-fill text-primary"></i> MyOnlineStand
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Anuncios" asp-action="Index">
                                <i class="bi bi-shop"></i> Catálogo de Veículos
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Vendedor" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Painel Vendedor
                                </a>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Administrador"))
                        {
                            <li class="nav-item border-start ms-2 ps-2">
                                <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill"></i> Administração
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    @if (User.IsInRole("Comprador"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Comprador" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> Dashboard
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Vendedor"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Vendedor" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> Dashboard
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-speedometer2"></i> Dashboard
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Sair
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Registar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-5">
        <div class="container py-5">
            <div class="row">
                <!-- Sobre -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-car-front-fill text-primary"></i> MyOnlineStand
                    </h5>
                    <p class="small text-white-50">
                        O seu marketplace de confiança para compra e venda de automóveis em Portugal.
                    </p>
                    <div class="mt-3">
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter fs-5"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-linkedin fs-5"></i></a>
                    </div>
                </div>

                <!-- Links Rápidos -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Links Rápidos</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none hover-primary">
                                <i class="bi bi-chevron-right"></i> Comprar Carros
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Sobre" asp-action="Index" class="text-white-50 text-decoration-none hover-primary">
                                <i class="bi bi-chevron-right"></i> Sobre Nós
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Sobre" asp-action="Contactos" class="text-white-50 text-decoration-none hover-primary">
                                <i class="bi bi-chevron-right"></i> Contactos
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Informações Legais -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Informações Legais</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Sobre" asp-action="Termos" class="text-white-50 text-decoration-none hover-primary">
                                <i class="bi bi-chevron-right"></i> Termos de Uso
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Sobre" asp-action="Privacidade" class="text-white-50 text-decoration-none hover-primary">
                                <i class="bi bi-chevron-right"></i> Política de Privacidade
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contactos -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Contactos</h6>
                    <ul class="list-unstyled small text-white-50">
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill text-primary"></i>
                            <a href="mailto:contacto@myonlinestand.pt" class="text-white-50 text-decoration-none">
                                contacto@myonlinestand.pt
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill text-primary"></i>
                            <a href="tel:+351210000000" class="text-white-50 text-decoration-none">
                                +351 210 000 000
                            </a>
                        </li>
                        <li>
                            <i class="bi bi-clock-fill text-primary"></i>
                            Seg-Sex: 9h-18h
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small text-white-50 mb-0">
                        &copy; 2025 MyOnlineStand. Todos os direitos reservados.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="small text-white-50 mb-0">
                        Desenvolvido com <i class="bi bi-heart-fill text-danger"></i> para os amantes de automóveis
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
