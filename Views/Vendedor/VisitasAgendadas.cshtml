@model List<VisitaViewModel>

@{
    ViewData["Title"] = "Visitas Agendadas";
    var aguardaAprovacao = Model.Where(v => v.Estado == "Pendente").OrderBy(v => v.Data_Hora).ToList();
    var aprovadas = Model.Where(v => v.Estado == "Confirmada").OrderBy(v => v.Data_Hora).ToList();
    var realizadas = Model.Where(v => v.Estado == "Realizada").OrderByDescending(v => v.Data_Hora).ToList();
    var recusadas = Model.Where(v => v.Estado == "Recusada").OrderByDescending(v => v.Data_Hora).ToList();
    var canceladas = Model.Where(v => v.Estado == "Cancelada").OrderByDescending(v => v.Data_Hora).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-event"></i> Visitas Agendadas</h2>
        <a asp-action="MeusAnuncios" class="btn btn-primary">
            <i class="bi bi-list"></i> Meus Anúncios
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Tabs para filtrar por estado -->
        <ul class="nav nav-tabs mb-4" id="visitasTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="aguarda-tab" data-bs-toggle="tab" data-bs-target="#aguarda" type="button" role="tab">
                    <i class="bi bi-hourglass-split text-warning"></i> Aguarda Aprovação
                    @if (aguardaAprovacao.Any())
                    {
                        <span class="badge bg-warning text-dark">@aguardaAprovacao.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="aprovadas-tab" data-bs-toggle="tab" data-bs-target="#aprovadas" type="button" role="tab">
                    <i class="bi bi-check-circle text-success"></i> Aprovadas (@aprovadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="realizadas-tab" data-bs-toggle="tab" data-bs-target="#realizadas" type="button" role="tab">
                    Realizadas (@realizadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="recusadas-tab" data-bs-toggle="tab" data-bs-target="#recusadas" type="button" role="tab">
                    Recusadas (@recusadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="canceladas-tab" data-bs-toggle="tab" data-bs-target="#canceladas" type="button" role="tab">
                    Canceladas (@canceladas.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content" id="visitasTabContent">
            <!-- Tab Aguarda Aprovação -->
            <div class="tab-pane fade show active" id="aguarda" role="tabpanel">
                @if (aguardaAprovacao.Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Atenção:</strong> Tem @aguardaAprovacao.Count pedido(s) de visita a aguardar a sua aprovação.
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-warning">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Contacto</th>
                                    <th>Data/Hora Proposta</th>
                                    <th>Localização</th>
                                    <th>Observações</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var visita in aguardaAprovacao)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                            {
                                                <img src="@visita.FotoPrincipal" alt="@visita.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 80px; height: 60px;">
                                                    <i class="bi bi-car-front"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@visita.Titulo</strong><br />
                                            <small class="text-muted">@visita.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@visita.CompradorNome</strong><br />
                                            <small class="text-muted">@visita.CompradorEmail</small>
                                        </td>
                                        <td>@(visita.CompradorContacto ?? "-")</td>
                                        <td>
                                            <i class="bi bi-calendar-event text-info"></i> @visita.Data_Hora.ToString("dd/MM/yyyy")<br />
                                            <i class="bi bi-clock text-info"></i> @visita.Data_Hora.ToString("HH:mm")
                                        </td>
                                        <td>@visita.Localizacao</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.Observacoes))
                                            {
                                                <small>@visita.Observacoes</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">-</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical" role="group">
                                                <form asp-action="AprovarVisita" asp-route-id="@visita.ID_Visita" method="post" class="mb-1">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success w-100">
                                                        <i class="bi bi-check-lg"></i> Aprovar
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#recusarModal-@visita.ID_Visita">
                                                    <i class="bi bi-x-lg"></i> Recusar
                                                </button>
                                            </div>

                                            <!-- Modal Recusar -->
                                            <div class="modal fade" id="recusarModal-@visita.ID_Visita" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-danger text-white">
                                                            <h5 class="modal-title">Recusar Visita</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form asp-action="RecusarVisita" asp-route-id="@visita.ID_Visita" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <div class="modal-body">
                                                                <p>Tem a certeza que pretende recusar a visita de <strong>@visita.CompradorNome</strong>?</p>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Motivo (opcional)</label>
                                                                    <textarea name="motivo" class="form-control" rows="3" placeholder="Ex: Não tenho disponibilidade nessa data..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                                <button type="submit" class="btn btn-danger">Recusar Visita</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de visita a aguardar aprovação.
                    </div>
                }
            </div>

            <!-- Tab Aprovadas -->
            <div class="tab-pane fade" id="aprovadas" role="tabpanel">
                @if (aprovadas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Contacto</th>
                                    <th>Data/Hora</th>
                                    <th>Localização</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var visita in aprovadas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                            {
                                                <img src="@visita.FotoPrincipal" alt="@visita.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 80px; height: 60px;">
                                                    <i class="bi bi-car-front"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@visita.Titulo</strong><br />
                                            <small class="text-muted">@visita.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@visita.CompradorNome</strong><br />
                                            <small class="text-muted">@visita.CompradorEmail</small>
                                        </td>
                                        <td>@(visita.CompradorContacto ?? "-")</td>
                                        <td>
                                            <i class="bi bi-calendar-event text-success"></i> @visita.Data_Hora.ToString("dd/MM/yyyy")<br />
                                            <i class="bi bi-clock text-success"></i> @visita.Data_Hora.ToString("HH:mm")
                                        </td>
                                        <td>@visita.Localizacao</td>
                                        <td>
                                            <div class="btn-group-vertical" role="group">
                                                <form asp-action="MarcarVisitaRealizada" asp-route-id="@visita.ID_Visita" method="post" class="mb-1">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-primary w-100">
                                                        <i class="bi bi-check-circle"></i> Marcar Realizada
                                                    </button>
                                                </form>
                                                <form asp-action="CancelarVisita" asp-route-id="@visita.ID_Visita" method="post" onsubmit="return confirm('Tem a certeza que pretende cancelar esta visita aprovada?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                        <i class="bi bi-x-circle"></i> Cancelar
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas aprovadas.
                    </div>
                }
            </div>

            <!-- Tab Realizadas -->
            <div class="tab-pane fade" id="realizadas" role="tabpanel">
                @if (realizadas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Data/Hora</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var visita in realizadas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                            {
                                                <img src="@visita.FotoPrincipal" alt="@visita.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@visita.Titulo</strong><br />
                                            <small class="text-muted">@visita.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@visita.CompradorNome</strong><br />
                                            <small class="text-muted">@visita.CompradorEmail</small>
                                        </td>
                                        <td>@visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td><span class="badge bg-success">Realizada</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas realizadas.
                    </div>
                }
            </div>

            <!-- Tab Recusadas -->
            <div class="tab-pane fade" id="recusadas" role="tabpanel">
                @if (recusadas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Data/Hora</th>
                                    <th>Observações</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var visita in recusadas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                            {
                                                <img src="@visita.FotoPrincipal" alt="@visita.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@visita.Titulo</strong><br />
                                            <small class="text-muted">@visita.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@visita.CompradorNome</strong><br />
                                            <small class="text-muted">@visita.CompradorEmail</small>
                                        </td>
                                        <td>@visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.Observacoes))
                                            {
                                                <small class="text-muted">@visita.Observacoes</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">-</small>
                                            }
                                        </td>
                                        <td><span class="badge bg-danger">Recusada</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas recusadas.
                    </div>
                }
            </div>

            <!-- Tab Canceladas -->
            <div class="tab-pane fade" id="canceladas" role="tabpanel">
                @if (canceladas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Data/Hora</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var visita in canceladas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(visita.FotoPrincipal))
                                            {
                                                <img src="@visita.FotoPrincipal" alt="@visita.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@visita.Titulo</strong><br />
                                            <small class="text-muted">@visita.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@visita.CompradorNome</strong><br />
                                            <small class="text-muted">@visita.CompradorEmail</small>
                                        </td>
                                        <td>@visita.Data_Hora.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td><span class="badge bg-secondary">Cancelada</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem visitas canceladas.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Sem Visitas:</strong> Ainda não foram agendadas visitas aos seus anúncios.
        </div>
    }
</div>
