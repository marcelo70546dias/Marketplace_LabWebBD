@model List<ReservaViewModel>

@{
    ViewData["Title"] = "Pedidos de Reserva";
    var aguardaAprovacao = Model.Where(r => r.Estado == "Pendente").OrderBy(r => r.Data_Inicio).ToList();
    var aprovadas = Model.Where(r => r.Estado == "Confirmada").OrderBy(r => r.Data_Fim).ToList();
    var concluidas = Model.Where(r => r.Estado == "Concluida").OrderByDescending(r => r.Data_Fim).ToList();
    var recusadas = Model.Where(r => r.Estado == "Recusada").OrderByDescending(r => r.Data_Inicio).ToList();
    var canceladas = Model.Where(r => r.Estado == "Cancelada").OrderByDescending(r => r.Data_Inicio).ToList();
    var expiradas = Model.Where(r => r.Estado == "Expirada").OrderByDescending(r => r.Data_Fim).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> Pedidos de Reserva</h2>
        <a asp-action="MeusAnuncios" class="btn btn-primary">
            <i class="bi bi-list"></i> Todos os Anúncios
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <!-- Tabs para filtrar por estado -->
        <ul class="nav nav-tabs mb-4" id="reservasTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="aguarda-tab" data-bs-toggle="tab" data-bs-target="#aguarda" type="button" role="tab">
                    <i class="bi bi-hourglass-split text-warning"></i> Aguarda Aprovação
                    @if (aguardaAprovacao.Any())
                    {
                        <span class="badge bg-warning text-dark">@aguardaAprovacao.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="aprovadas-tab" data-bs-toggle="tab" data-bs-target="#aprovadas" type="button" role="tab">
                    <i class="bi bi-check-circle text-success"></i> Aprovadas
                    @if (aprovadas.Any())
                    {
                        <span class="badge bg-success">@aprovadas.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="concluidas-tab" data-bs-toggle="tab" data-bs-target="#concluidas" type="button" role="tab">
                    Concluídas (@concluidas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="recusadas-tab" data-bs-toggle="tab" data-bs-target="#recusadas" type="button" role="tab">
                    Recusadas (@recusadas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="canceladas-tab" data-bs-toggle="tab" data-bs-target="#canceladas" type="button" role="tab">
                    Canceladas (@canceladas.Count)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="expiradas-tab" data-bs-toggle="tab" data-bs-target="#expiradas" type="button" role="tab">
                    Expiradas (@expiradas.Count)
                </button>
            </li>
        </ul>

        <div class="tab-content" id="reservasTabContent">
            <!-- Tab Aguarda Aprovação -->
            <div class="tab-pane fade show active" id="aguarda" role="tabpanel">
                @if (aguardaAprovacao.Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-hourglass-split"></i>
                        <strong>Pendentes:</strong> Estes pedidos de reserva aguardam a sua aprovação. Ao aprovar, o veículo ficará reservado para o comprador.
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Preço</th>
                                    <th>Comprador</th>
                                    <th>Contacto</th>
                                    <th>Data Pedido</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in aguardaAprovacao)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 80px; height: 60px;">
                                                    <i class="bi bi-car-front"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td><strong class="text-primary">@reserva.Preco.ToString("N0") €</strong></td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong><br />
                                            <small class="text-muted">@reserva.CompradorEmail</small>
                                        </td>
                                        <td>@reserva.CompradorContacto</td>
                                        <td>
                                            <small>@reserva.Data_Inicio.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group-vertical btn-group-sm">
                                                <form asp-action="AprovarReserva" asp-route-id="@reserva.ID_Historico" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success btn-sm w-100 mb-1" onclick="return confirm('Tem a certeza que pretende aprovar este pedido de reserva? O veículo ficará bloqueado para outros compradores.');">
                                                        <i class="bi bi-check-lg"></i> Aprovar
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-danger btn-sm w-100" data-bs-toggle="modal" data-bs-target="#recusarModal@(reserva.ID_Historico)">
                                                    <i class="bi bi-x-lg"></i> Recusar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Modal para recusar -->
                                    <div class="modal fade" id="recusarModal@(reserva.ID_Historico)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="RecusarReserva" asp-route-id="@reserva.ID_Historico" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Recusar Pedido de Reserva</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Tem a certeza que pretende recusar o pedido de reserva de <strong>@reserva.CompradorNome</strong> para o veículo <strong>@reserva.Titulo</strong>?</p>
                                                        <div class="mb-3">
                                                            <label for="motivo" class="form-label">Motivo da recusa (opcional):</label>
                                                            <textarea name="motivo" class="form-control" rows="3" placeholder="Ex: Veículo já não disponível, preço alterado, etc."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <button type="submit" class="btn btn-danger">Recusar Pedido</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de reserva a aguardar aprovação.
                    </div>
                }
            </div>

            <!-- Tab Aprovadas -->
            <div class="tab-pane fade" id="aprovadas" role="tabpanel">
                @if (aprovadas.Any())
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle"></i>
                        <strong>Reservas Ativas:</strong> Estes veículos estão reservados. O comprador tem prioridade na compra até à data de expiração.
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Preço</th>
                                    <th>Comprador</th>
                                    <th>Contacto</th>
                                    <th>Dias Restantes</th>
                                    <th>Expira em</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in aprovadas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 80px; height: 60px;">
                                                    <i class="bi bi-car-front"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td><strong class="text-primary">@reserva.Preco.ToString("N0") €</strong></td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong><br />
                                            <small class="text-muted">@reserva.CompradorEmail</small>
                                        </td>
                                        <td>@reserva.CompradorContacto</td>
                                        <td>
                                            @{
                                                var corBadge = reserva.DiasRestantes > 3 ? "bg-success" : (reserva.DiasRestantes > 1 ? "bg-warning text-dark" : "bg-danger");
                                            }
                                            <span class="badge @corBadge">
                                                <i class="bi bi-clock"></i> @reserva.DiasRestantes dia(s)
                                            </span>
                                        </td>
                                        <td>
                                            <small>@reserva.Data_Fim.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td>
                                            <form asp-action="CancelarReserva" asp-route-id="@reserva.ID_Historico" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Tem a certeza que pretende cancelar esta reserva? O veículo voltará a estar disponível.');">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas ativas.
                    </div>
                }
            </div>

            <!-- Tab Concluídas -->
            <div class="tab-pane fade" id="concluidas" role="tabpanel">
                @if (concluidas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Preço</th>
                                    <th>Comprador</th>
                                    <th>Data</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in concluidas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td><strong class="text-primary">@reserva.Preco.ToString("N0") €</strong></td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong>
                                        </td>
                                        <td>
                                            <small>@reserva.Data_Fim.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td><span class="badge bg-success">Concluída (Vendido)</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas concluídas.
                    </div>
                }
            </div>

            <!-- Tab Recusadas -->
            <div class="tab-pane fade" id="recusadas" role="tabpanel">
                @if (recusadas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Data Pedido</th>
                                    <th>Motivo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in recusadas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong>
                                        </td>
                                        <td>
                                            <small>@reserva.Data_Inicio.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.MotivoRecusa))
                                            {
                                                <small class="text-muted">@reserva.MotivoRecusa</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted fst-italic">Sem motivo indicado</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem pedidos de reserva recusados.
                    </div>
                }
            </div>

            <!-- Tab Canceladas -->
            <div class="tab-pane fade" id="canceladas" role="tabpanel">
                @if (canceladas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Data</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in canceladas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong>
                                        </td>
                                        <td>
                                            <small>@reserva.Data_Inicio.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td><span class="badge bg-secondary">Cancelada</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas canceladas.
                    </div>
                }
            </div>

            <!-- Tab Expiradas -->
            <div class="tab-pane fade" id="expiradas" role="tabpanel">
                @if (expiradas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Foto</th>
                                    <th>Veículo</th>
                                    <th>Comprador</th>
                                    <th>Expirou em</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in expiradas)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(reserva.FotoPrincipal))
                                            {
                                                <img src="@reserva.FotoPrincipal" alt="@reserva.Titulo" style="width: 80px; height: 60px; object-fit: cover;" class="rounded">
                                            }
                                        </td>
                                        <td>
                                            <strong>@reserva.Titulo</strong><br />
                                            <small class="text-muted">@reserva.MarcaModelo</small>
                                        </td>
                                        <td>
                                            <strong>@reserva.CompradorNome</strong>
                                        </td>
                                        <td>
                                            <small>@reserva.Data_Fim.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td><span class="badge bg-secondary">Expirada</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Não tem reservas expiradas.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Sem Reservas:</strong> Nenhum dos seus anúncios tem pedidos de reserva.
        </div>
    }
</div>
