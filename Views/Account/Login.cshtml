@model Marketplace_LabWebBD.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Entrar</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        @if (ViewBag.ShowResendLink == true)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle-fill"></i>
                                <strong>Email não confirmado.</strong>
                                <p class="mb-1">Não recebeu o email de confirmação?</p>
                                <a asp-action="ResendConfirmationEmail" class="btn btn-sm btn-info">
                                    <i class="bi bi-envelope"></i> Reenviar Email de Confirmação
                                </a>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="bi bi-lock"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Digite a sua password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Lembrar-me
                            </label>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Entrar
                            </button>
                        </div>

                        <hr class="my-4" />

                        <div class="text-center">
                            <p class="mb-0">
                                Ainda não tem conta?
                                <a asp-action="Register" class="text-decoration-none fw-bold">
                                    <i class="bi bi-person-plus"></i> Registar
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
